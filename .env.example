# MoneyKracked Environment Configuration
# Copy this file to .env and fill in your values

# ===== Database =====
DATABASE_URL=postgresql://user:password@localhost:5432/moneykracked

# ===== Authentication =====
# Generate a secure secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:5173

# GitHub OAuth (Optional)
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===== Email Verification =====
# Enable/disable email verification for new user registrations
# Set to 'true' to require email verification before users can login
# Set to 'false' to allow immediate login after registration
EMAIL_VERIFICATION_ENABLED=true

# ===== SMTP Email Configuration =====
# Configure your SMTP server for sending verification emails
# Gmail: smtp.gmail.com, port 465 (SSL) or 587 (TLS)
# Outlook: smtp.office365.com, port 587
# Custom: Check with your email provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=MoneyKracked

# Note for Gmail users:
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the App Password in SMTP_PASS (not your regular password)

# ===== Gemini AI =====
# Get API key from: https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key

# ===== Server Configuration =====
# Port to run the dev server on (default: 5173)
PORT=5173

# Allowed hosts for reverse proxy/Cloudflare (comma separated)
# Example: "myapp.com,test.myapp.com,localhost"
ALLOWED_HOSTS=

# ===== Application =====
PUBLIC_APP_NAME=MoneyKracked
PUBLIC_DEFAULT_CURRENCY=MYR
